<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinStudy01.ClipBoardEx01"
             Padding="20">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryMemo" Placeholder="Enter Memo"></Entry>
            <Button x:Name="btnSetClipboard" Text="Set Clipboard" Clicked="btnSetClipboard_Clicked"></Button>
            <Button x:Name="btnGetClipboard" Text="Get Clipboard" Clicked="btnGetClipboard_Clicked"></Button>
            <Label x:Name="labelMemo"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>