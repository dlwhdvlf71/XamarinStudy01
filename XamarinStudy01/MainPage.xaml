<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinStudy01.MainPage">

    <NavigationPage.TitleView>
        <Label Text="MainPage" TextColor="Black" FontAttributes="Bold" Margin="0, 0, 20, 0" HorizontalOptions="End"></Label>
    </NavigationPage.TitleView>
    <StackLayout BackgroundColor="White" Margin="20">
        <Label Text="Main Page" HorizontalOptions="CenterAndExpand" Padding="20" BackgroundColor="LightGray"></Label>

        <Button x:Name="btGoToSecond" Text="Go to Second Page" VerticalOptions="EndAndExpand" Margin="20" Clicked="btGoToSecond_Clicked"></Button>
        
    </StackLayout>

</ContentPage>
