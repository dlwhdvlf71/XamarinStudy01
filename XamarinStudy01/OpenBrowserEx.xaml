<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinStudy01.OpenBrowserEx"
             Padding="20">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryUrl" Placeholder="Enter URL" PlaceholderColor="LightGray" Keyboard="Url"></Entry>
            <Button x:Name="btnOpenBrowser" Text="Open Browser" Clicked="btnOpenBrowser_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>