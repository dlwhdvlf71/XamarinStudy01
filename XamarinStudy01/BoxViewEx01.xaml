<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinStudy01.BoxViewEx01"
             Padding="20">
    <ContentPage.Content>
        <StackLayout x:Name="boxStackLayout" Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="Start" >
            <BoxView Color="SkyBlue" CornerRadius="10" WidthRequest="20" HeightRequest="20" >
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped">

                    </TapGestureRecognizer>
                </BoxView.GestureRecognizers>
            </BoxView>
            <BoxView Color="SkyBlue" CornerRadius="10" WidthRequest="20.2" HeightRequest="20.9" >
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped">

                    </TapGestureRecognizer>
                </BoxView.GestureRecognizers>
            </BoxView>
            
        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>