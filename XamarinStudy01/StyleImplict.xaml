<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinStudy01.StyleImplict"
             Padding="0, 20, 0, 0">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"></Setter>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"></Setter>
                <Setter Property="BackgroundColor" Value="Gray"></Setter>
                <Setter Property="TextColor" Value="Blue"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Padding="0, 20, 0, 0">

            <Entry Text="Name"></Entry>
            <Entry Text="Address"></Entry>
            <Entry Text="Address Detail"></Entry>
            <Entry Text="Age" TextColor="Yellow" BackgroundColor="Green"></Entry>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>